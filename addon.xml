<?xml version="1.0" encoding="UTF-8"?>
<addon id="skin.carmichael" version="5.0.9" name="Carmichael" provider-name="Mcborzu">
  <requires>
    <import addon="xbmc.gui" version="4.0.0"/>
	<import addon="script.favourites" version="4.0.4"/>
	<import addon="script.artwork.downloader" version="12.0.11"/>
	<import addon="service.skin.widgets" version="0.0.13"/>
	<import addon="script.tv.show.next.aired" version="5.0.4"/>
	<import addon="script.randomandlastitems" version="2.0.3"/>
  </requires>
  
  <extension
    point="xbmc.gui.skin"
    defaultthemename="Textures.xbt"
    debugging="false"
    effectslowdown="0.75">
    <res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">The Carmichael - A skin for XBMC</summary>
    <description lang="en">The Carmichael is designed to presesent your media through a unified interface. Easy of use and a common design thoughtout all views is the goal.</description>
	<disclaimer>Not PVR, Touchscreen, or Mouse compatible</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
